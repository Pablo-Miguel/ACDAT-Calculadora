            app:layout_row="3" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="95dp"
            android:height="71dp"
            android:insetLeft="3dp"
            android:insetRight="3dp"
            android:text="@string/n5"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="95dp"
            android:height="71dp"
            android:insetLeft="3dp"
            android:insetRight="3dp"
            android:text="@string/n6"
            android:textSize="30sp"
            app:layout_column="2"
