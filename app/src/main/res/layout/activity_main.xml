            android:width="95dp"
            android:height="71dp"
            android:insetLeft="3dp"
            android:insetRight="3dp"
            android:text="@string/n8"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="95dp"
            android:height="71dp"
            android:insetLeft="3dp"
            android:insetRight="3dp"
            android:text="@string/n9"
            android:textSize="30sp"
            app:layout_column="2"
